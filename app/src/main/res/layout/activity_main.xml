<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="ModuleA"
            android:textSize="20sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="getModuleAInfo"
            android:text="同步调用getModuleAInfo"
            tools:ignore="OnClick" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="getModuleAInfoAsync"
            android:text="异步调用getModuleAInfoAsync"
            tools:ignore="OnClick" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="startModuleAActivity"
            android:text="同步调用startModuleAActivity"
            tools:ignore="OnClick" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="startModuleAActivityForResult"
            android:text="异步调用startModuleAActivityForResult"
            tools:ignore="OnClick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="ModuleC"
            android:textSize="20sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="testSchemeUri"
            android:text="测试通过scheme直接调用"
            tools:ignore="OnClick" />

    </LinearLayout>
</ScrollView>
